{
	"name": "upstream-merge-tool",
	"version": "1.0.0",
	"description": "Automatically merge upstream changes while preserving custom code",
	"main": "dist/electron/main.js",
	"module": "src/main.ts",
	"type": "module",
	"homepage": "./",
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0",
		"yarn": ">=3.0.0"
	},
	"scripts": {
		"start": "electron .",
		"start:cli": "tsx src/main.ts",
		"dev": "webpack --config webpack.config.js --mode development --watch & sleep 2 && electron --inspect=5858 .",
		"dev:build": "webpack --config webpack.config.js --mode development",
		"build:gui": "webpack --config webpack.config.js --mode production && electron-builder",
		"build:cli": "bun build ./src/main.ts --compile --outfile ./bin/merge-tool",
		"build:macos": "bun build ./src/main.ts --compile --outfile ./bin/merge-tool --target=bun-darwin-x64",
		"build:windows": "bun build ./src/main.ts --compile --outfile ./bin/merge-tool.exe --target=bun-windows-x64",
		"build:linux": "bun build ./src/main.ts --compile --outfile ./bin/merge-tool --target=bun-linux-x64",
		"build:all": "bun run build:gui && bun run build:cli && bun run build:macos && bun run build:windows && bun run build:linux",
		"lint": "bunx biome lint --write .",
		"lint:check": "bunx biome lint .",
		"lint:unsafe": "bunx biome lint --write --unsafe .",
		"format": "bunx biome format --write .",
		"format:check": "bunx biome format --check .",
		"test": "bun test",
		"test:bun": "bun test",
		"test:node": "tsx node_modules/.bin/vitest",
		"test:unit": "bun test src/__tests__/unit",
		"test:unit:logger": "bun test src/__tests__/unit/logger.test.ts",
		"test:unit:config": "bun test src/__tests__/unit/config-manager.test.ts",
		"test:unit:git": "bun test src/__tests__/unit/git-service.test.ts",
		"test:unit:conflict": "bun test src/__tests__/unit/conflict-resolver.test.ts",
		"test:unit:report": "bun test src/__tests__/unit/report-generator.test.ts",
		"test:integration": "bun test src/__tests__/integration",
		"test:integration:config-git": "bun test src/__tests__/integration/config-to-git.test.ts",
		"test:integration:git-resolver": "bun test src/__tests__/integration/git-to-resolver.test.ts",
		"test:integration:resolver-report": "bun test src/__tests__/integration/resolver-to-report.test.ts",
		"test:e2e": "bun test src/__tests__/e2e",
		"test:e2e:no-conflict": "bun test src/__tests__/e2e/scenario-no-conflict.test.ts",
		"test:e2e:auto-resolve": "bun test src/__tests__/e2e/scenario-auto-resolve.test.ts",
		"test:e2e:manual-resolve": "bun test src/__tests__/e2e/scenario-manual-resolve.test.ts",
		"test:e2e:errors": "bun test src/__tests__/e2e/error-cases.test.ts",
		"test:all": "bun test src/__tests__",
		"test:coverage": "bun test --coverage"
	},
	"keywords": [
		"git",
		"merge",
		"upstream",
		"automation",
		"conflict-resolution"
	],
	"dependencies": {
		"@hookform/resolvers": "^5.2.2",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-scroll-area": "^1.2.10",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-tabs": "^1.1.13",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.546.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-hook-form": "^7.65.0",
		"react-router-dom": "^6.30.1",
		"tailwind-merge": "^3.3.1",
		"tw-animate-css": "^1.4.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@types/bun": "latest",
		"@types/node": "^20.19.22",
		"@types/react": "^18.3.26",
		"@types/react-dom": "^18.3.7",
		"autoprefixer": "^10.4.21",
		"concurrently": "^8.2.2",
		"css-loader": "^7.1.2",
		"electron": "^38.3.0",
		"electron-builder": "^26.0.12",
		"electron-is-dev": "^1.2.0",
		"html-webpack-plugin": "^5.6.4",
		"postcss": "^8.5.6",
		"postcss-loader": "^8.2.0",
		"shadcn": "^3.4.2",
		"style-loader": "^4.0.0",
		"tailwindcss": "^3.4.18",
		"ts-loader": "^9.5.4",
		"tsconfig-paths-webpack-plugin": "^4.2.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"webpack": "^5.102.1",
		"webpack-cli": "^6.0.1"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
